/** 新首页 **/
page {
  background-color: #f5faf7;
  font-family: PingFang SC;
}

.wrap {
  padding-top: 400rpx;
  padding-bottom: 140rpx;
}

.detail-swiper,
.detail-swiper > swiper,
.detail-swiper > swiper-item,
.detail-swiper image {
  width: 750rpx;
  height: 400rpx;
}

.detail-swiper {
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  right: 0
}

.detail-wrap {
  position: relative;
  z-index: 9;
  background-color: #f5faf7;
}

.detail-infos {
  background-color: #fff;
  padding: 30rpx 40rpx;
}

.detail-name {
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.detail-info {
  font-size: 28rpx;
  color: #777;
  padding: 10rpx 0;
}

.detail-price {
  line-height: 50rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #ff8417;
}

.detail-content {
 background-color: #fff;
 padding: 40rpx;
 margin-top: 20rpx;
}

.detail-title {
  border-left: 8rpx solid #31B17F;
  font-size: 32rpx;
  font-weight: bold;
  padding-left: 10rpx;
}

.detail-cont {
  padding: 40rpx 10rpx;
}

.detail-rich {
	line-height: 40rpx;
	font-size: 32rpx;
	color: #333;
	text-indent: 56rpx;
}

.detail-btn {
  position: fixed;
  z-index: 9;
  right: 0;
  bottom: 0;
  left: 0;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #31B17F;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
}