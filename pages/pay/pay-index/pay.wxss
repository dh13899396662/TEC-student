  margin-left: 10rpx;
}

.pay-item{
  display: flex;
  flex-direction: row;
  height: 42rpx;
  width: 500rpx;
  margin-top: 14rpx;
  /* background-color: green; */
  
}

.pay-item-icon{
  height: 30rpx;
  width: 30rpx;
  margin-top: 6rpx;
  margin-left: 2rpx;
}

.pay-item-title{
  font-size: 26rpx;
  color: #888888;
