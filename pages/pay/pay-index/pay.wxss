  margin-top: 3rpx;
  width: 104rpx;
}

/*立即缴费按钮*/
.pay-btn{
  height: 32rpx;
  width: 140rpx;
  background-color: #31B17F;
  margin-left: 54rpx;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
  padding: 24rpx 170rpx 32rpx 170rpx;
  margin-top: 85rpx;
}

.money-text{
  font-size: 28rpx;
  color: #32AA91;
  float: right;
}

.yuan{
  float: right;
  font-size:26rpx;
  margin-left: 10rpx;
}

.top{
  margin-top: 20rpx;
}

.msg-pay-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 240rpx;
  margin-left:100rpx;
}

.right-msg-pay-view{
  font-size: 28rpx;
  color: #353535;
}

/*缩放*/
.active {
  opacity: 1;
  transform: none;
  transition: all 0.2s ease-in 0s;
}  
.quiet {
  opacity: 0.4;
  transform: scale(0.9111111);
  transition: all 0.2s ease-in 0s;
}