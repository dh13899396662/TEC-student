  justify-content: flex-start;
}

.pay-back-images{
  position:absolute; 
  height: 966rpx;
  width: 590rpx;
  z-index:-1;
}

.pay-center-image{
  height: 436rpx;
  width: 580rpx;
  margin-left: 5.5rpx;
  margin-top: 5.5rpx;
}

.pay-items{
  /* background-color: green; */
  height: 282rpx;
  width: 538rpx;
  margin-top: 30rpx;
  margin-left: 28rpx;
}

.pay-center-name{
  font-size: 32rpx;
