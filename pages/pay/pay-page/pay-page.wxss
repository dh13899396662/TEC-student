.order-detail-image{
  height: 450rpx;
  width: 100%;
}

.order-msg-view{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 470rpx;
  background: white;
  margin-top: 20rpx;
}

.detail-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 92.4rpx;
}

.detail-text{
  margin-left: 30rpx;
  color: #353535;
  font-size: 32rpx;
}

.detail-money{
  margin-right: 32rpx;
  color: #32AA91;
  font-size: 36rpx;
}

.detail-msg{
  margin-right: 32rpx;
  font-size: 26rpx;
  color: #888888;
}

.detail-line{
    height: 2rpx;
    background-color: #E5E5E5;
    margin-left: 30rpx;
}

.sure-btn{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 650rpx;
  background-color: #31B17F;
  color: white;
  margin-top: 80rpx;
  border-radius: 8rpx;
  font-size: 36rpx;
}