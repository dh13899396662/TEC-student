form{
  width: 100%;
  margin-top: 30rpx;
}

.student-view{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70rpx;
  justify-content: flex-start;
}

.student-text{
  height: 30rpx;
  width: 200rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: 32rpx;
  color: #B2B2B2;
}

.input-view{
  background-color: #FFFFFF;
  width: 100%;
  height: 376rpx;

}

.input-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 92rpx;
}

.line-view{
  height: 2rpx;
  margin-left: 30rpx;
  background-color: #E5E5E5;
}

.item-text{
  color: #353535;
  margin-left: 30rpx;
  font-size: 32rpx;
  height: 92rpx;
  width: 130rpx;
  text-align: center;
}

.item-input{
  margin-left: 30rpx;
  height: 92rpx;
}

.placeholder-text{
  font-size: 26rpx;
  color: #B2B2B2;
}

.check-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  margin-top: 30rpx;
  background-color: white;
  height: 90rpx;
}

.submit-btn{
  height: 88rpx;
  background-color: #31B17F;
  width: 690rpx;
  margin-top: 50rpx;
  border-width: 2rpx;
  border-color: #32AA91;
  color: white;
}