.center-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  
}

.student-center-top{
  position: fixed;
  top: 0;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 364rpx;
  width: 100%;
  background-color: #31B17F;
}

.head-img{
  height: 100rpx;
  width: 100rpx;
  margin-top: 70rpx;
}

.head-name{
  font-size: 30rpx;
  margin-top: 28rpx;
  color: white;
}

.center-btn{
  display: flex;
  flex-direction: row;
  width: 688rpx;
  height: 100rpx;
  background-color: #FFFFFF;
  border-width: 2rpx;
  border-color: #E0E0E0;
  border-style: solid;
  border-radius: 10rpx;
  margin-top: 36rpx;
}

.btn-item{
  display: flex;
  flex: 0.5;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.btn-image{
  height: 32rpx;
  width: 32rpx;
}

.btn-text{
  font-size: 26rpx;
  color: #888888;
}

.btn-text-red{
  font-size: 26rpx;
  color:red;
  margin-left: 3rpx;
}

.user-item{
  display: flex;
  flex-direction: column; 
  align-items: center;
  height: 284rpx;
  width: 348rpx;
}

.user-item-list{
  display: flex;
  flex-direction: column;
  margin-top: 394rpx;
}

.user-item-row{
  display: flex;
  flex-direction: row;
  height: 284rpx;
  width: 100%;
  margin-top: 20rpx;
  align-items: center;
  justify-content: center;
}

.my-item-image{
  position: absolute;
  height: 284rpx;
  width: 348rpx;
  z-index: -99;
}

.my-item-title{
  position: absolute;
  z-index: 99;
  color: #353535;
  font-size: 30rpx;
  margin-top: 158rpx;
}

.my-item-msg{
  font-size: 24rpx;
  color: #888888;
  letter-spacing: 1rpx;
}

.my-item-msg-green{
  font-size: 24rpx;
  color: #31B17F;
  letter-spacing: 1rpx;
}


.my-item-text{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 214rpx;
  width: 100%;
}

.line-view{
  background-color: #E0E0E0;
  width: 2rpx;
  height: 44rpx;
  margin-top: 24rpx;
}