.course-item{
  width: 100%;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin-top: 50rpx;
}

.line-view{
  height: 1rpx;
  background-color: #E0E0E0;
  width: 686rpx;
}

.course-msg{
  display: flex;
  flex-direction: row;
  height: 392rpx;
  width: 686rpx;
}

.notice-view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 686rpx;
  height: 86rpx;
}

.left-view{
  display: flex;
  flex-direction: column;
  height: 392rpx;
  width: 152rpx;
}

.left-view-head{
  height: 100rpx;
  width: 100rpx;
  margin-top: -30rpx;
}

.left-view-name{
  color: #353535;
  font-size: 28rpx;
  height: 30rpx;
  width: 88rpx;
  margin-top: 10rpx;
  margin-left: 6rpx;
}

.left-view-btn{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 102rpx;
  height: 60rpx;
  border-color: #7AC8AA;
  border-width: 2rpx;
  border-radius: 4rpx;
  color: #32AA91;
  font-size: 32rpx;
  margin-top: 50rpx;
}

.right-view{
  height: 392rpx;
  width: 534rpx;
}

.right-msg-view{
  width: 534rpx;
  margin-top: 50rpx;
  height: 342rpx;
}

.msg-item{
  widows: 534rpx;
}

.item-title{
  font-size: 26rpx;
  color:#353535;
}

.item-msg{
  font-size: 24rpx;
  color:#888888;
  letter-spacing: 1rpx;
}

.item-msg-green{
  color:#32AA91;
  font-size: 28rpx;
}

.course-notice-img{
  height: 38rpx;
  width: 38rpx;
  margin-top: 22rpx;
}

.course-notice-msg{
  margin-left: 14rpx;
  height: 26rpx;
  font-size: 26rpx;
  color: #888888;
  margin-top: 25rpx;
  letter-spacing: 1rpx;
}