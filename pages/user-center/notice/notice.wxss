/*tab切换样式*/
swiper{
  width: 100%;
  height: 100%;
}

.tab-view{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: #31B17F;
}

.tab-view-item{
  display: flex;
  flex: 0.5;
  flex-direction: column;
  align-items:center;
  justify-content: flex-end;
}

.tab-view-item-text{
  width: 150rpx;
  height: 30rpx;
  font-size: 30rpx;
  color: white;
  margin-bottom: 32rpx;
}

.tab-view-item-line.active{
  height: 4rpx;
  width: 86rpx;
  background-color: white;
  display:block;
}

.tab-view-item-line{
  height: 4rpx;
  width: 86rpx;
  background-color: white;
  display: none;
}


/*提醒列表*/
.class-notice-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  margin-top: 30rpx;
}

.notice-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: white;
  min-height: 185rpx;
  margin-top: 30rpx;
}

.icon-view{
  flex: 0.15;
}

.msg-view{
  flex: 0.85;
  display:flex;
  flex-direction: column;
}

.notice-title{
  margin-top: 30rpx;
  font-size: 32rpx;
  color:#353535;
  margin-left: 12rpx;
}

.notice-time{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #BFBFBF;
  margin-left: 12rpx;
}

.notice-msg{
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #888888;
  margin-bottom: 20rpx;
  margin-left: 12rpx;
  letter-spacing:1rpx;
  line-height: 44rpx;
  margin-right: 34rpx;
}

.notice-item-icon{
  margin-top: 30rpx;
  margin-left: 32rpx;
  width: 70rpx;
  height: 70rpx;
}

