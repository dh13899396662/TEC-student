<!--index.wxml-->
<view class='index-container'>
  <view class="image-background">
    <image class='background-image' src='/images/index-background.png'></image>
    <image class='index-image' src='/images/index-image.png'></image>
  </view>
  <view class='form-view'>
    <form bindsubmit='formsubmit'>
      <view class='input-view'>
        <image class='input-icon' src='/images/icon/msg-phone.png'></image>
        <input class='input-style' maxlength='11' placeholder="请输入您的手机号" type='number'></input>
      </view>
      <view class='line-view'></view>
      <view class='input-view'>
        <image class='input-icon' src='/images/icon/msg-password.png'></image>
        <input class='input-style' placeholder="请输入短信验证码" maxlength='6' type='number'></input>
        <view class='get-msg'>
          获取验证码
        </view>
      </view>
      <view class='line-view'></view>
      <view class='btn-view'>
        <button class='yz-btn' form-type="submit">验证</button>
      </view>
    </form>
  </view>
</view>