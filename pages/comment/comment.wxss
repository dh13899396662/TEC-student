/**comment.wxss**/
page {
	background-color: #f5faf7;
}

.wrap {
	padding-bottom: 40rpx;
}

.comment-top {
	position: fixed;
	z-index: 9;
	top: 0;
	left: 0;
	width: 750rpx;
	height: 80rpx;
	line-height: 40rpx;
	background-color: #fff;
	box-sizing: border-box;
	padding: 20rpx 40rpx;
	vertical-align: top;
}

.comment-top > i {
	font-size: 38rpx;
	vertical-align: top;
}

.picker-item {
	max-width: 200rpx;
	height: 40rpx;
	font-size: 24rpx;
	color: #fff;
	border-radius: 20rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
	margin-left: 20rpx;
	display: inline-block;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.comment-wrap {
	padding: 80rpx 40rpx 0;
}

.comment-item {
	width: 670rpx;
	height: auto;
	background-color: #fff;
	border-radius: 20rpx;
	box-sizing: border-box;
	box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, .08);
	padding: 30rpx;
	margin-top: 50rpx;
}

.comment-head {
	display: flex;
}

.comment-avator {
	width: 84rpx;
	height: 84rpx;
	border-radius: 42rpx;
}

.comment-avator image {
	width: 84rpx;
	height: 84rpx;
}

.comment-info {
	width: 400rpx;
	line-height: 30rpx;
	box-sizing: border-box;
	padding: 5rpx 20rpx;
}

.comment-name {
	height: 36rpx;
	font-size: 24rpx;
	font-weight: bold;
}

.comment-time {
	height: 30rpx;
	font-size: 22rpx;
	color: #999;
}

.comment-handle {
	width: 120rpx;
	text-align: right;
}

.comment-btn {
	width: 100%;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 26rpx;
	border: 2rpx solid #31B17F;
	border-radius: 24rpx;
	text-align: center;
}

.comment-cont {
	line-height: 36rpx;
	font-size: 24rpx;
	color: #999;
	padding: 30rpx 10rpx;
}

.comment-reply {
	line-height: 36rpx;
	font-size: 24rpx;
	color: #111;
	padding: 0 10rpx 10rpx;
}

.comment-reply > text {
	font-weight: bold;
}

.dialog-wrap,
.dialog-mask {
	position: fixed;
}

.dialog-wrap {
	top: 200rpx;
	right: 100rpx;
	left: 100rpx;
	background-color: #fff;
	border-radius: 40rpx;
	padding: 40rpx 50rpx 50rpx;
	z-index: 999;
}

.dialog-mask {
	z-index: 99;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0, 0, 0, .55)
}

.dialog-head {
	position: relative;
	z-index: 1;
}

.dialog-title {
	width: 100%;
	font-size: 34rpx;
	font-weight: bold;
	text-align: center;
}

.dialog-close {
	position: absolute;
	z-index: 2;
	top: 0;
	right: -5rpx;
	height: 50rpx;
}

.dialog-close > i {
	font-size: 50rpx;
	font-weight: normal;
	color: #dcdcdc;
	display: block;
}

.dialog-body {
	padding: 50rpx 0 40rpx;
}

.dialog-tip {
	font-size: 26rpx;
	color: #999;
	padding-bottom: 20rpx;
}

.dialog-tip > text {
	font-weight: bold;
}

.dialog-cont {
	border: 2rpx solid #eee;
	border-radius: 10rpx;
	padding: 10rpx;
}

.dialog-cont > textarea {
	height: 200rpx;
	line-height: 40rpx;
	font-size: 28rpx;
}

.dialog-foot {
	text-align: center;
}

.dialog-btn {
	height: 80rpx;
	line-height: 80rpx;
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
	text-align: center;
	border-radius: 40rpx;
}
