/**atlas.wxss**/
page {
	background-color: #f5faf7;
}

.wrap {
	padding-top: 88rpx;
}

.atlas-top {
	position: fixed;
	z-index: 99;
	top: 0;
	right: 0;
	left: 0;
	height: 88rpx;
	background-color: #fff;
	box-sizing: border-box;
	padding: 20rpx 30rpx;
	display: flex;
}

.search-picker {
	width: 128rpx;
	height: 48rpx;
	line-height: 44rpx;
	font-size: 22rpx;
	text-align: center;
	border: 2rpx solid #31B17F;
	border-radius: 24rpx;
	box-sizing: border-box;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.search-input {
	width: 406rpx;
	height: 48rpx;
	background-color: #f5faf7;
	border: 2rpx solid #d8dfdb;
	border-radius: 24rpx;
	box-sizing: border-box;
	padding: 0 23rpx;
	margin: 0 30rpx;
	overflow: hidden;
}

.search-input input {
	width: 100%;
	height: 44rpx;
	line-height: 44rpx;
	font-size: 24rpx;
	background: none;
}

.search-btn {
	width: 106rpx;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 24rpx;
	font-weight: bold;
	color: #fff;
	text-align: center;
	border-radius: 24rpx;
}

.atlas-wrap {
	width: 750rpx;
	box-sizing: border-box;
	padding: 0 15rpx;
	display: flex;
	flex-wrap: wrap;
}

.atlas-item {
	width: 200rpx;
	height: 314rpx;
	background-color: #fff;
	border-radius: 4rpx;
	box-sizing: border-box;
	box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, .08);
	padding: 10rpx;
	margin-top: 40rpx;
	margin-left: 30rpx;
	overflow: hidden;
}

.atlas-image {
	width: 180rpx;
	height: 200rpx;
	position: relative;
	z-index: 1;
}

.atlas-image image {
	width: 180rpx;
	height: 200rpx;
	display: block;
}

.atlas-team {
	position: absolute;
	z-index: 2;
	bottom: 0;
	left: 0;
	width: 180rpx;
	height: 40rpx;
	line-height: 40rpx;
	background-color: rgba(0, 0, 0, .2);
	font-size: 22rpx;
	color: #fff;
	box-sizing: border-box;
	padding: 0 20rpx;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.atlas-name {
	height: 44rpx;
	font-size: 26rpx;
	padding-top: 10rpx;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.atlas-name > text {
	font-weight: bold;
}

.atlas-name > i {
	font-size: 24rpx;
	vertical-align: top;
}

.iconfont.icon-nan {
	color: #00a0e9;
}

.iconfont.icon-nv-copy {
	color: #ea68a2;
}

.atlas-time {
	height: 40rpx;
	line-height: 40rpx;
	font-size: 20rpx;
	color: #999;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.atlas-foot {
	position: fixed;
	z-index: 99;
	right: 0;
	bottom: 0;
	left: 0;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 32rpx;
	color: #fff;
	text-align: center;
}

.dialog-wrap,
.dialog-mask {
	position: fixed;
}

.dialog-wrap {
	top: 200rpx;
	right: 100rpx;
	left: 100rpx;
	background-color: #fff;
	border-radius: 40rpx;
	padding: 40rpx 50rpx 50rpx;
	z-index: 999;
}

.dialog-mask {
	z-index: 99;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0, 0, 0, .55)
}

.dialog-body {
	padding: 10rpx 0;
}

.dialog-image,
.dialog-image image {
	width: 446rpx;
	height: 292rpx;
	border-radius: 4rpx;
	display: block;
	overflow: hidden;
}

.dialog-image {
	border: 2rpx solid #f2f2f2;
}

.dialog-name {
	line-height: 36rpx;
	font-size: 28rpx;
	padding-top: 20px;
}

.dialog-name text {
	font-weight: bold;
}

.dialog-name i {
	font-size: 24rpx;
}

.dialog-team {
	font-size: 24rpx;
	padding: 10rpx 0;
}

.dialog-time {
	font-size: 22rpx;
	color: #999;
	padding-top: 10px;
}

.dialog-foot {
	width: 100%;
	padding-top: 40rpx;
}

.dialog-btn {
	width: 130rpx;
	height: 48rpx;
	line-height: 48rpx;
	font-size: 26rpx;
	font-weight: bold;
	color: #fff;
	text-align: center;
	border-radius: 40rpx;
	float: right;
	margin-right: 40rpx;
}

.btn-close {
	background-color: #fff;
	color: #f88c22;
	border: 2rpx solid #f88c22;
	float: left;
	margin-left: 40rpx;
}